<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="@dimen/default_border"
        android:left="@dimen/default_border_negative"
        android:right="@dimen/default_border_negative"
        android:top="@dimen/default_border_negative">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/blue" />

            <solid android:color="@color/back_secondary" />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</layer-list>